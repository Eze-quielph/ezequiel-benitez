---
const { date, title, description, link } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
>
</div>

<div class="relative pb-12 md:col-span-2">  
  <div class="sticky top-0">
    <h3 class="text-lg font-semibold text-yellow-200 mt-3">{title}</h3>
    <time class="mb-1 text-sm font-normal leading-none text-sky-300/70"
      >{date}</time
    >
  </div>
</div>
<p class="mb-4 text-base font-normal text-gray-200 text-balance">
  {description}
</p>
<div
  class="relative flex flex-col gap-2 pb-4 text-gray-600 dark:text-gray-300 md:col-span-3"
>
  {
    link && (
      <a href={link}>
        Saber m√°s{" "}
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-5 icon icon-tabler icon-tabler-chevron-right"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <>
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <path d="M9 6l6 6l-6 6" />
          </>
        </svg>
      </a>
    )
  }
</div>
